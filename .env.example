# Database
DATABASE_URL=postgresql://connector:connector_dev@localhost:5432/connector

# Redis (Cache + Queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Worker Configuration
WORKER_CONCURRENCY=5

# Encryption (32+ character key - CHANGE THIS IN PRODUCTION!)
ENCRYPTION_KEY=dev-encryption-key-change-in-prod!

# Logging
LOG_LEVEL=debug
NODE_ENV=development

# Scheduler Configuration
SCHEDULER_INTERVAL_MS=60000

# Config Sync Settings
CONFIG_AUTO_REFRESH_THRESHOLD_HOURS=6

# Plenty API Settings
PLENTY_API_RATE_LIMIT_PER_MINUTE=60
PLENTY_API_TIMEOUT_MS=30000

# Mock Shopware (set to false when using real Shopware)
USE_MOCK_SHOPWARE=true
