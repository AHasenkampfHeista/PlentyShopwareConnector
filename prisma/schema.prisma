  tenantId            String   @map("tenant_id")
  tenant              Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  // Core data
  name                String
  displayType         String   @default("text") @map("display_type") // 'text', 'color', 'image'
  sortingType         String   @default("alphanumeric") @map("sorting_type")
  position            Int      @default(0)

  // Plenty reference
  plentyAttributeId   Int?     @map("plenty_attribute_id")
  plentyPropertyId    Int?     @map("plenty_property_id")

  // Custom fields for Plenty tracking (plentySourceType, plentySourceId)
  customFields        Json?    @map("custom_fields")

  // Translations stored as JSON: { "de": "Farbe", "en": "Color" }
  translations        Json?

  // Raw data
  rawShopwareData     Json?    @map("raw_shopware_data")

  // Timestamps
  createdAt           DateTime @default(now()) @map("created_at")
  updatedAt           DateTime @updatedAt @map("updated_at")

  @@unique([tenantId, plentyAttributeId])
  @@index([tenantId])
  @@index([tenantId, plentyPropertyId])
  @@map("mock_shopware_property_groups")
}

